<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="smallf.CycleNow" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/NoTitle" >
        <activity
            android:name="smallf.CycleNow.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="smallf.CycleNow.LoginView"
            android:label="@string/app_name"
            android:theme="@style/MyTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BlueTooth"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="smallf.CycleNow.MainFrameView"
            android:theme="@style/MyTheme">
        </activity>
        <activity
            android:name="smallf.CycleNow.RouteDatabase"
            android:theme="@style/MyTheme"
            android:label="路线库">
        </activity>
        <activity
            android:name="smallf.CycleNow.DeviceView"
            android:label="设备"
            android:theme="@style/MyTheme">
        </activity>
        <activity
            android:name="smallf.CycleNow.RankingList"
            android:label="排行榜"
            android:theme="@style/MyTheme">
        </activity>
    </application>

</manifest>
